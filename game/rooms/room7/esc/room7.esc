:setup
> [eq ESC_LAST_SCENE room6]
	teleport player r7_l_exit
	# Set player look right
	set_angle player 180
	stop
> [!last_scene]
	teleport player player_start
	stop

:ready

camera_push r7_object2 1 LINEAR
wait 3
camera_push player 1 LINEAR

